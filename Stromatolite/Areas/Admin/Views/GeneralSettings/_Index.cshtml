@model IEnumerable<Stromatolite.Models.GeneralSetting>
@{Layout = null;}


<table class="table table-bordered table-hover table-responsive table-striped">
    <tr>
        <th>
            Наименование
        </th>
        <th>
            Значение
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        string trid = "gen" + item.GeneralSettingID.ToString();
        <tr id="@trid">
            <td>
                @Html.DisplayFor(modelItem => item.SettingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SettingValue)
            </td>
            <td>
                @Ajax.ActionLink(" ", "Edit", "GeneralSettings", new { area = "Admin", id = item.GeneralSettingID }, new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.ReplaceWith, UpdateTargetId = trid }, new { @class = "btn btn-sm btn-primary pe-7s-edit" })
            </td>
        </tr>
    }

</table>
