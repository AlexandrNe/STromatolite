@model IEnumerable<Stromatolite.Models.Currency>

<table class="table table-bordered table-hover table-responsive table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Abbr)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        string trid = item.CurrencyID.ToString();
        <tr id="@trid">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abbr)
            </td>
            <td>
                @Ajax.ActionLink("Редактировать", "Edit", "Currencies", new { area = "Admin", id = item.CurrencyID }, new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.ReplaceWith, UpdateTargetId = trid }, new { @class = "btn btn-sm btn-primary" })
                @Ajax.ActionLink("Удалить", "Delete", "Currencies", new { area = "Admin", id = item.CurrencyID }, new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "mod-currency-delete", OnSuccess = "$('#currencyModalDelete').modal('show')", OnFailure = "$('#currencyModalDelete').modal('show')" }, new { @class = "btn btn-sm btn-primary" })
            </td>
        </tr>
    }

</table>
