@model IEnumerable<Stromatolite.Models.Offer>

@{
    ViewBag.Title = "Список предложений";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Currency.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.TitleFull)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OldPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Currency.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.TitleFull)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OldPrice)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.OfferID }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.OfferID })
        </td>
    </tr>
}

</table>
