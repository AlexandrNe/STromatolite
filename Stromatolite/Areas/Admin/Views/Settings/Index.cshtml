
@{
    ViewBag.Title = "Общие настройки";
}

<h2>@ViewBag.Title</h2>

<ul class="nav nav-tabs">
    <li class="active"><a href="#general" data-toggle="tab">Основные настройки</a></li>
    <li><a href="#currency" data-toggle="tab">Валюта</a></li>
    <li><a href="#unit" data-toggle="tab">Ед. измерения</a></li>
