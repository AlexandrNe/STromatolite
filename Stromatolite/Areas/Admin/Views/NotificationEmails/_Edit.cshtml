@model Stromatolite.Models.NotificationEmail

@{
    Layout = null;
    string trid = "nte" + Model.NotificationEmailID.ToString();
}

<tr id="@trid">
    <td colspan="4">
        <div class="row">
            @using (Ajax.BeginForm("Edit", "NotificationEmails", new { area = "Admin" }, new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.ReplaceWith, UpdateTargetId = "nte" + Model.NotificationEmailID.ToString() }, null))
            {
                @Html.AntiForgeryToken();
                @Html.HiddenFor(model => model.NotificationEmailID)



                <div class="col-md-8">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-2">
                    <input type="submit" value="Сохранить" class="form-control btn btn-sm btn-primary" />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>

            }
            <div class="col-md-2">
                @Ajax.ActionLink("Отмена", "Details", "NotificationEmails", new { area = "Admin", id = Model.NotificationEmailID }, new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.ReplaceWith, UpdateTargetId = "nte" + Model.NotificationEmailID.ToString() }, new { @class = "form-control btn btn-sm btn-default" })
            </div>
        </div>
    </td>

</tr>

