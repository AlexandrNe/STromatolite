@model Stromatolite.Models.Order
@{
    Layout = null;
}

<div id="getprice-modal">

    @using (Ajax.BeginForm("_GetPrice", "Orders", new { area = string.Empty }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "getprice-modal", InsertionMode = InsertionMode.Replace, LoadingElementId = "loadImg" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Получить прайс</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.OrderNum)
            @Html.HiddenFor(model => model.OrderDate)

            <div class="form-group">

                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите адрес электронной почты...", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">

                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите Ваше имя..." } })
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })

            </div>



            <div class="form-group">

                @Html.TextAreaFor(model => model.Comment, 5, 80, new { @class = "form-control", @placeholder = "Оставьте комментарий..." })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })

            </div>



            <div class="form-group">

                <div class="row">
                    <div class="col-md-5">

                        <button onclick="yaCounter50066596.reachGoal('GET-PRICE'); return true;" type="submit" class="btn btn-ghost btn-primary icon-left" style="width: 100%;"><i class="pe-7s-call"></i>Заказать прайс</button>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="col-md-5">
                        <span onclick="$.fancybox.close();" class="btn btn-primary waves-effect waves-light icon-left" style="width: 100%;"><i class="pe-7s-close"></i>Закрыть</span>
                    </div>
                </div>

            </div>





        </div>
    }

</div>
