<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    @{if (ViewBag.MetaDescription == null)
    {
        ViewBag.MetaDescription = "плитняк-лемезит.рф Облицовочный камень лемезит с доставкой от производителя";
    }
    if (ViewBag.MetaKeywords == null)
    {
        ViewBag.MetaKeywords = "купить лемезит, плитняк лемезит, натуральный камень, облицовочный камень";
    }
    if (ViewBag.Title == null)
    {
        ViewBag.Title = "ЛЕМЕЗИТ";
    }}
    <meta name="description" content="@ViewBag.MetaDescription" />
    <meta name="keywords" content="@ViewBag.MetaKeywords" />
    <meta name="author" content="AlexandrNe" />

    <meta name="yandex-verification" content="4bc3e581eabd899c" />

    <title>@ViewBag.Title</title>

    <!--Favicon-->
    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/img/favicon.ico" type="image/x-icon">

    <!-- Vendor Styles -->
    @Styles.Render("~/Content/revolution")
   

    <!--Modernizr / Detectizr-->
    @Styles.Render("~/Content/masterslider/css")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fancybox/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Yandex.Metrika counter -->
